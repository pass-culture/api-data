{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "enabledManagers": ["pep621"],
  "lockFileMaintenance": { "enabled": true },
  "separateMajorMinor": true,
  "packageRules": [
    {
      "description": "Group all dependency updates for the reco API",
      "matchFileNames": ["apps/recommendation/api/pyproject.toml"],
      "groupName": "reco-api-pyproject-deps"
    },
    {
      "description": "Group all dependency updates for the compliance API",
      "matchFileNames": ["apps/fraud/compliance/api/pyproject.toml"],
      "groupName": "compliance-api-pyproject-deps"
    }
  ]
}
